<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:fitsSystemWindows="true"
    tools:openDrawer="left"
    android:elevation="10dp"
    android:id="@+id/drawerLayout"
    android:background="@color/white"
    >
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:padding="20dp"
            >
            <ImageView
                android:id="@+id/toggler"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/toogle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="something"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>

        <RelativeLayout
            android:id="@+id/card_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_margin="20dp"
                android:id="@+id/card1"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Your Neighbourhood"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text"
                            android:paddingStart="5dp"
                            android:text="10, 874 neighbours near you!"
                            android:textColor="#434343"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text2"
                            android:paddingStart="5dp"
                            android:text="They shared 1,227 listening last month!"
                            android:textColor="#434343"
                            android:textSize="13sp" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:src="@drawable/house"

                        />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/card_home"
            android:layout_above="@+id/bottom_menu"
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


        <RelativeLayout
            android:id="@+id/bottom_menu"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            >
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:paddingVertical="10dp"
                app:itemIconTint="@drawable/state_selector"
                app:itemTextColor="@drawable/state_selector"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu"
                />
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/menu_left"
        app:itemTextColor="@drawable/state_selector"
        app:itemIconTint="@color/orange"
        android:elevation="10dp"
        />
</androidx.drawerlayout.widget.DrawerLayout>
